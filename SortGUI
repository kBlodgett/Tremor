    private void saveButtonFileMouseClicked(java.awt.event.MouseEvent evt) {                                            
        PrintWriter writer;
        try {
            writer = new PrintWriter(new FileWriter("Sort.csv"));
            writer.println("Date, Time, Max HR, Max Vector Magnitude, Length");
            for(int i =0; tremList.size()>i; i++)
            {
                Tremor trem = tremList.get(i);
                writer.println(trem.date()+","+trem.startTime()+","+trem.maxHR()+","+trem.maxVec()+","+trem.length());
            }
            writer.close();
        } catch (IOException ex) {
            Logger.getLogger(File.class.getName()).log(Level.SEVERE, null, ex);
        }
        JOptionPane optionPane = new JOptionPane();
        optionPane.showMessageDialog(null, "File has been saved to NetBeans project folder", "File Saved", 1);

    }                                           

    private void dateButtonMouseClicked(java.awt.event.MouseEvent evt) {                                        
        tremList = sort.dateTime();
    }                                       

    private void hrButtonMouseClicked(java.awt.event.MouseEvent evt) {                                      
       tremList = sort.heartRate();
    }                                     

    private void movementButtonMouseClicked(java.awt.event.MouseEvent evt) {                                            
       tremList = sort.vectorMag();
    }                                           

    private void lengthButtonMouseClicked(java.awt.event.MouseEvent evt) {                                          
       tremList = sort.length();
    }                                         


